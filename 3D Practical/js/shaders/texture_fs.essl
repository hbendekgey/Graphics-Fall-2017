	precision highp float;

	// for applying the texture coloring
	varying vec2 texCoord; 
	uniform sampler2D colorTexture; 

	// for shading
	varying vec4 worldNormal;
	varying vec4 worldPos;

	void main(void) {
		//gl_FragColor = texture2D(colorTexture, texCoord);
		gl_FragColor = abs(worldNormal / length(worldNormal)) + vec4(0,0,0,1);
	}
`;